{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "hi-eva",
  "version": "0.0.3",
  "identifier": "com.hi-eva.app",
  "build": {
    "beforeDevCommand": "pnpm ui:dev",
    "devUrl": "http://localhost:8990",
    "beforeBuildCommand": "pnpm ui:build",
    "frontendDist": "../dist"
  },
  "app": {
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "Utility",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}